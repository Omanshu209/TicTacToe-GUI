<ResultPopup>:
    size_hint: .5,.5
    title: 'Result'
    auto_dismiss: False
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
       
        MDLabel:
            id:result
            text:''
            bold:True
            font_size: self.height/2
            halign:'center'
        
        MDBoxLayout:
            padding: 0
            spacing:10
            
            MDRectangleFlatButton:
                text: 'OK'
                pos_hint:{'center_x':.5}
                on_release: root.dismiss()
                
